<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter id="symfony_shell.configuration.class">Psy\Configuration</parameter>
        <parameter id="symfony_shell.shell.class">Psy\Shell</parameter>
    </parameters>

    <services>
        <service id="symfony_shell.config" class="%symfony_shell.configuration.class%" public="false">
            <call method="setHistoryFile">
                <argument>%kernel.cache_dir%/symfony_shell_history</argument>
            </call>
        </service>

        <service id="symfony_shell.shell" class="symfony_shell.shell.class">
            <argument type="service" id="symfony_shell.config" />
        </service>
    </services>
</container>